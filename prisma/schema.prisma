generator client {
  provider = "prisma-client-js"
  // output = "../generated/prisma-client"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Professor {
  id                   Int                  @id @default(autoincrement())
  firstName            String
  lastName             String
  username             String               @unique
  email                String               @unique
  password             String
  isAdmin              Boolean              @default(false)
  passwordResetToken   String?              @unique
  passwordResetExpires DateTime?
  teachingAssignments  TeachingAssignment[]
}

model Program {
  id      Int       @id @default(autoincrement())
  name    String    @unique // Bachelor, Master
  classes Class[]
  subject Subject[]
}

model Subject {
  id                  Int                  @id @default(autoincrement())
  code                String               @unique // Shembull: CIS280
  name                String // Shembull: Web Development
  programId           Int
  program             Program              @relation(fields: [programId], references: [id])
  teachingAssignments TeachingAssignment[]
}

model TeachingAssignment {
  id          Int          @id @default(autoincrement())
  professorId Int
  professor   Professor    @relation(fields: [professorId], references: [id])
  subjectId   Int
  subject     Subject      @relation(fields: [subjectId], references: [id])
  classId     Int
  class       Class        @relation(fields: [classId], references: [id])
  typeId      Int
  type        TeachingType @relation(fields: [typeId], references: [id])
  lectures    Lecture[]

  @@unique([professorId, subjectId, classId]) // Prevent duplicate assignments for same professor-subject-class combination
}

model TeachingType {
  id          Int                  @id @default(autoincrement())
  name        String               @unique
  assignments TeachingAssignment[]
}

model Class {
  id                  Int                  @id @default(autoincrement())
  name                String
  programId           Int
  program             Program              @relation(fields: [programId], references: [id])
  students            Student[]
  teachingAssignments TeachingAssignment[]
}

model Student {
  id               Int          @id @default(autoincrement())
  firstName        String
  father           String?
  lastName         String
  institutionEmail String       @unique
  personalEmail    String?
  phone            String?
  memo             String?
  orderId          Int?
  classId          Int
  class            Class        @relation(fields: [classId], references: [id])
  attendance       Attendance[]
}

model Lecture {
  id                   Int                @id @default(autoincrement())
  date                 DateTime
  teachingAssignmentId Int
  teachingAssignment   TeachingAssignment @relation(fields: [teachingAssignmentId], references: [id])
  attendance           Attendance[]

  @@unique([teachingAssignmentId, date]) // Një leksion për caktim për datë
}

model Attendance {
  id        Int     @id @default(autoincrement())
  studentId Int
  student   Student @relation(fields: [studentId], references: [id])
  lectureId Int
  lecture   Lecture @relation(fields: [lectureId], references: [id])
  status    String // PRESENT, ABSENT, PARTICIPATED
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  PARTICIPATED
}

model ActivityLog {
  id          Int       @id @default(autoincrement())
  userId      Int       // Professor ID who performed the action
  userName    String    // Professor name for easier display
  action      String    // CREATE, UPDATE, DELETE
  entity      String    // students, professors, classes, subjects, lectures, attendance, assignments
  entityId    Int?      // ID of the affected entity
  details     String?   @db.Text // JSON string with details of what changed
  createdAt   DateTime  @default(now())
  
  @@index([userId])
  @@index([entity])
  @@index([createdAt])
}
